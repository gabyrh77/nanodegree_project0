<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/title_main" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView" />

    <Button
        style="@style/ButtonStyle.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_app1"
        android:id="@+id/button1"
        android:onClick="showToast"
        android:layout_below="@+id/textView" />

    <Button
        style="@style/ButtonStyle.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_app2"
        android:id="@+id/button2"
        android:onClick="showToast"
        android:layout_below="@+id/button1" />

    <Button
        style="@style/ButtonStyle.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_app3"
        android:id="@+id/button3"
        android:onClick="showToast"
        android:layout_below="@+id/button2"/>

    <Button
        style="@style/ButtonStyle.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_app4"
        android:id="@+id/button4"
        android:onClick="showToast"
        android:layout_below="@+id/button3"/>

    <Button
        style="@style/ButtonStyle.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_app5"
        android:id="@+id/button5"
        android:onClick="showToast"
        android:layout_below="@+id/button4"/>

    <Button
        style="@style/ButtonStyle.Purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_app6"
        android:id="@+id/button6"
        android:onClick="showToast"
        android:layout_below="@+id/button5" />

</RelativeLayout>
